void menu_choice();
int main() {
   menu_choice();
  return 0;
}
void menu_choice(){
	 Passenger passengers[MAX_SEATS];
    for (int i = 0; i < MAX_SEATS; i++) {
        passengers[i].seat = 0;
    }
    int choice;
                display_menu();
			   cin>>choice;
        switch (choice) {
            case 1: // Reserve a seat
				destination_choice(passengers);
                break;
            case 2: // View all reserved seats
                view_reserved_seats(passengers);
                break;

            case 3: // Exit
                cout << "\nGoodbye!\n";
                break;
            default:
                cout << "\nError: Invalid choice. Please try again.\n";
}while (choice!=3);
}
void display_menu() {
	 cout << "\n\n\t\twelcome to KMB bus station \n";
    cout << "\nMENU\n";
    cout << "------------\n";
    cout << "1. Reserve a seat\n";
    cout << "2. View all reserved seats\n";
    cout << "3. Exit\n\n";
    cout << "Enter your choice: " << "------------";
}
