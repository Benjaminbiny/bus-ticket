const int MAX_SEATS = 30; // Maximum number of seats per bus 
struct Date {
    int day;
    int month;
    int year;
};
struct Passenger {
    string name;
    string gender;
    string starting_place;
    string destination_place;
    Date dob;
    int seat;
};
