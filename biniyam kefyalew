void menu_choice(int x){
	 Passenger passengers[MAX_SEATS];
    for (int i = 0; i < MAX_SEATS; i++) {
        passengers[i].seat = 0;
    }
    int choice;
	do{
			display_menu();
			   cin>>choice;
        switch (choice) {
            case 1: // Reserve a seat
				destination_choice(passengers);
                break;
            case 2: // View all reserved seats
                view_reserved_seats(passengers);
                break;

            case 3: // Exit
                cout << "\nGoodbye!\n";
                break;

            default:
                cout << "\nError: Invalid choice. Please try again.\n";
                break;
        }

    } while (choice != 3);
}
int main() {
	int x;
   menu_choice(x);
  return 0;
}
void destination_choice(Passenger passengers[]){
   cout << "chose your starting place\n";
    cout << "1. Addis abeba\n";
    cout << "2. Bahir dar\n";
    cout << "3. Gondar\n";
    cout<<"4.menu  \n";
    int starting_place;
	int destination_place;
    cin >>starting_place;
    switch (starting_place){
    case 1:{
        do{
        cout << "chose your destination\n";
        cout << "1.Bahir dar\n";
        cout << "2.Gondar\n";
        cout << "3.back\n";
        	 cin >> destination_place;
        switch (destination_place)
        {
        case 1:{
            cout << "your fee will be 1234.5 birr\n";
           int seat_number;
    bool valid_seat_number;
    do {
        valid_seat_number = true;
        cout << "\nEnter the seat number you wish to reserve: " << "------------";
        cin >> seat_number;
        if (seat_number < 1 || seat_number > MAX_SEATS) {
            cout << "Error: Invalid seat number. Please try again.\n";
            valid_seat_number = false;
        }
        else if (addisabeba_bahirdar[seat_number].seat != 0) {
            cout << "Error: Seat " << seat_number << " is already reserved.\n Please choose another seat ------------.\n";
            valid_seat_number = false;
        }
    } while (!valid_seat_number);
    cin.ignore(); // To clear input buffer 
    Passenger addisabeba_bahirdar; 
   addisabeba_bahirdar.seat = seat_number;
    cout << "Enter passenger NAME : ";
    getline(cin, addisabeba_bahirdar.name);
    cout << "Enter passenger gender (male/female): ";
    getline(cin, addisabeba_bahirdar.gender);
    cout << "Enter passenger date of birth (dd/mm/yyyy): ";
    cin >> addisabeba_bahirdar.dob.day >>addisabeba_bahirdar.dob.month >> addisabeba_bahirdar.dob.year;
    cout << "Seat " << seat_number << " reserved for " <<addisabeba_bahirdar[seat_number].name << ".\n";
    int x;
    menu_choice(x);
			      break;
			   }
        case 2:{
            cout << "your fee will be 1674.5 birr\n";
           int seat_number;
    bool valid_seat_number;
    do {
        valid_seat_number = true;
        cout << "\nEnter the seat number you wish to reserve: " << "------------";
        cin >> seat_number;
        if (seat_number < 1 || seat_number > MAX_SEATS) {
            cout << "Error: Invalid seat number. Please try again.\n";
            valid_seat_number = false;
        }
        else if (addisabeba_gondar[seat_number-1].seat != 0) {
            cout << "Error: Seat " << seat_number << " is already reserved.\n Please choose another seat ------------.\n";
            valid_seat_number = false;
        }
    } while (!valid_seat_number);
    cin.ignore(); // To clear input buffer 
    Passenger addisabeba_gondar; 
    addisabeba_gondar.seat = seat_number;
    cout << "Enter passenger NAME : ";
    getline(cin, addisabeba_gondar.name);
    cout << "Enter passenger gender (male/female): ";
    getline(cin, addisabeba_gondar.gender);
    cout << "Enter passenger date of birth (dd/mm/yyyy): ";
    cin >> addisabeba_gondar.dob.day >> addisabeba_gondar.dob.month >> addisabeba_gondar.dob.year;
    cout << "Seat " << seat_number << " reserved for " << addisabeba_gondar[seat_number].name << ".\n";
    int x;
    menu_choice(x);
			       break;
			   }
            case 3:{
            	 destination_choice(passengers);
            	  break ;
}
        default:{
            cout << "please try again \n";
            break ;
        } 
   }
    }while(destination_place!=3);
    break;
}
