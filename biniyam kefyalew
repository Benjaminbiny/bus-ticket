void display_menu() {
	 cout << "\n\n\t\twelcome to KMB bus station \n";
    cout << "\nMENU\n";
    cout << "------------\n";
    cout << "1. Reserve a seat\n";
    cout << "2. View all reserved seats\n";
    cout << "3. Exit\n\n";
    cout << "Enter your choice: " << "------------";
}
